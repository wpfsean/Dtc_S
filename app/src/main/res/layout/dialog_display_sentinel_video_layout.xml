<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8c7853"
    android:orientation="vertical">

    <TextView
        android:id="@+id/popu_prompt_sentinel_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="设备62的哨位面部视频"
        android:textColor="#d9d919"
        android:textSize="24sp" />


    <FrameLayout
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="@color/black">

        <cn.nodemedia.NodePlayerView
            android:id="@+id/popu_prompt_loading_video_view_layout"
            android:layout_width="600dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:padding="2dp"></cn.nodemedia.NodePlayerView>

        <RelativeLayout
            android:id="@+id/popu_prompt_loading_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:padding="2dp">

            <!--<TextView-->
                <!--android:layout_above="@+id/popu_sentinel_loading_icon_layout"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_marginBottom="24dp"-->
                <!--android:textSize="16sp"-->
                <!--android:textColor="@color/red"-->
                <!--android:text="Loading"/>-->

            <ImageView
                android:id="@+id/popu_sentinel_loading_icon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_loading"/>

        </RelativeLayout>

    </FrameLayout>

    <Button
        android:id="@+id/popu_prompt_close_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="关闭预览" />

</LinearLayout>
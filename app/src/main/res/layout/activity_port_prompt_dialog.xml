<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="276dp"
        android:layout_height="274dp"
        android:layout_margin="1dp"
        android:background="@mipmap/port_propaganda_background">


        <TextView
            android:id="@+id/speaking_name_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:gravity="center"
            android:text="AAAAAAAAAAAAAA"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="#eb0000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/speaking_time_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/speaking_name_layout"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#00ffff"
            android:textSize="36sp" />


        <TextView
            android:id="@+id/seaking_close_dialog_layout"
            android:layout_width="fill_parent"
            android:layout_height="41dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="结束喊话"
            android:textColor="#00ffff"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>
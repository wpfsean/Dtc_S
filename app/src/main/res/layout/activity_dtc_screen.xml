<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.tehike.client.dtc.multiple.app.project.ui.ScreenSaverActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/display_screen_time_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/colorText"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/display_screen_date_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/display_screen_time_layout"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/colorText"
            android:textSize="42sp" />

    </RelativeLayout>


</RelativeLayout>
